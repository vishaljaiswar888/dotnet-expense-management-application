@model ExpenseEntity

@{
	ViewData["Title"] = "View Expense Details for Delete";
}

<form method="post" asp-action="Delete">
	<input asp-for="ExpenseId" hidden />

	<div class="border p-1">
		<div class="from-group row">
			<h2 class="text-black-50 pl-3">Delete Your Expense</h2>
		</div>
		<br />

		<div class=row>
			<div class="col-4">
				<label asp-for="ExpenseDate"></label>				
				<input asp-for="ExpenseDate" class="form-control datetimepicker" disabled/>		
			</div>
		</div>
		<br />

		<div class=row>
			<div class="col-4">
				<label asp-for="ExpenseCategotyId"></label>				
				<select asp-for="ExpenseCategotyId" asp-items="@ViewBag.PopulateExpCategory" class="form-control" disabled></select>		
				<option selected>--Select Expense Category</option>
			</div>
		</div>
		<br />

		<div class="row">
			<div class="col-4">
				<label asp-for="ExpenseGivenTo"></label>				
				<input asp-for="ExpenseGivenTo" class="form-control" disabled/>
			</div>
		</div>
		<br />

		<div class="row">
			<div class="col-4">
				<label asp-for="ExpenseAmount"></label>				
				<input asp-for="ExpenseAmount" class="form-control" disabled/>
			</div>
		</div>
		<br />

		<div class="w-12 btn-group" role="group">
			<input type="submit" class="btn btn-primary mx-1" value="Delete" />
			<a asp-action="Index" class="btn btn-danger mx-1">Back</a>
		</div>		
	</div>
</form>